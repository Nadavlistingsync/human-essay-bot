{
  "manifest_version": 3,
  "name": "EssayForge - AI Essay Writer & Browser Control",
  "version": "2.0.0",
  "description": "AI-powered essay writing and comprehensive browser automation and control",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "notifications",
    "tabs",
    "webNavigation",
    "bookmarks",
    "history",
    "downloads",
    "webRequest",
    "contextMenus",
    "management"
  ],
  "host_permissions": [
    "https://docs.google.com/*",
    "https://api.openai.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/document/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["browser-control.js", "auto-test.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "EssayForge - AI Essay Writer & Browser Control",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": ["https://docs.google.com/*"]
    }
  ]
}
